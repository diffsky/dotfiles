# set folders to use
set header_cache =~/.mutt/cache/headers/
set message_cachedir =~/.mutt/cache/bodies/
set certificate_file =~/.mutt/certificates

set mbox_type=Maildir # use Maildir format
set mailcap_path=~/.mutt/mailcap # location of mailcap file
auto_view text/html # see ~/.mutt/mailcap for processing html messages
set confirmappend=no # don't ask for confirmation when appending (moving) messages
set delete=yes # on exit, delete messages marked for deletion
set pager_index_lines=6 # show 6 lines of the pager index when viewing a message
set sort=reverse-date # show messages in date order, top-down
set markers=no # don't show '+' for line wraps

# key bindings
bind pager,index 	<S-Up> 		half-up
bind pager,index 	<S-Down> 	half-down

# macros
macro index		.f		"l~F\n" "Show only flagged messages"
macro index		.a		"l~A\n" "Show all messages"

macro index		\Ca		"T.*\n;" "Select all messages"
macro index		A		"^T.*\n" "De-select all messages"

macro index,pager	I		"WN$" "Mark message as read"
macro index,pager	U		"N$" "Mark message as unread"

# colors
color normal		black   	default	
color indicator		white		blue
color index             black           default ~R # Read
color index 		brightblue	default ~N # New
color index 		red 		default ~D # Deleted
color index             magenta         default ~F # Flagged
color index		cyan		default ~T # Tagged
color hdrdefault        white	 	brightblue
color header   		brightwhite	blue ^Subject:
color quoted		brightwhite	default
color search		black		yellow
